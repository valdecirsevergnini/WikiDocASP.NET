@model WikiSistemaASP.NET.Models.Topico

@{
    ViewData["Title"] = "Detalhes do Tópico";
}

<h1>Detalhes do Tópico</h1>

<div>
    <h4>@Model.Titulo</h4>
    <div>
        <label>Conteúdo:</label>
        <p>@Model.Conteudo</p>
    </div>
    <div>
        <label>Módulo:</label>
        <p>
            @{
                var modulos = ViewBag.Modulos as List<WikiSistemaASP.NET.Models.Modulo>; 
                var moduloNome = modulos?.FirstOrDefault(m => m.Id == Model.ModuloId)?.Nome ?? "Módulo não encontrado";
            }
            @moduloNome
        </p>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>
