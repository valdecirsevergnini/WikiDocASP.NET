@model IEnumerable<WikiSistemaASP.NET.Models.Topico>

@{
    ViewData["Title"] = "Lista de Tópicos";
}

<h1>Lista de Tópicos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Conteúdo</th>
            <th>Módulo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var topico in Model)
        {
            <tr>
                <td>@topico.Titulo</td>
                <td>@topico.Conteudo</td>
                <td>
                    @{
                        var moduloNome = (topico.Modulo != null) ? topico.Modulo.Nome : "Módulo não encontrado";
                    }
                    @moduloNome
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@topico.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@topico.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-primary">Criar Novo Tópico</a>
</div>
